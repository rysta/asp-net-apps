<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - RircApps</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/SaldoKonovalova")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <a class="navbar-brand" href="/">RIRC Apps</a>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class=@ViewData["ActiveSaldo"]><a href="/SaldoKonovalova/Home/Index">SaldoSum</a></li>
                    <li class=@ViewData["ActivePretens"]><a href="/Pretens/Home/Index">Pretens</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container theme-showcase" role="main">
        <div id="body-content">@RenderBody()</div>
    </div>
        <footer></footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/SaldoKonovalova")
        @RenderSection("scripts", required: false)
</body>
</html>
